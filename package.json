{
  "name": "eventstore-ts-client",
  "version": "0.1.0",
  "description": "Eventstore javascript client library written in typescript",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "build": "./scipts/build.sh",
    "lint": "eslint --cache .",
    "lint:fix": "eslint . --fix",
    "test":"npm run lint && npm run test:unit && npm run test:integration && npm run combine-coverage",
    "test:integration": "./scipts/integrationTest.sh",
    "test:coverageIntegration": "nyc --temp-directory=./.nyc_integration --reporter=text-summary mocha test/integrationTests/**/*.test.ts",
    "test:unit": "nyc --temp-directory=./.nyc_unit --reporter=text-summary mocha test/unitTests/**/*.test.ts",
    "document": "typedoc --theme markdown",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "combine-coverage":"./scipts/combineCoverage.sh && nyc merge .nyc_output ./coverage/coverage.json && nyc report"
  },
  "files": [
    "dist/**/*"
  ],
  "pre-push": [
    "lint"
  ],
  "engines": {
    "node": ">=10.0.0",
    "npm": ">=6.0.0"
  },
  "engineStrict": true,
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@types/bunyan": "^1.8.6",
    "bunyan": "^1.8.12",
    "long": "^4.0.0",
    "protobufjs": "^6.8.8",
    "uuid4": "^1.1.4"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/long": "^4.0.0",
    "@types/mocha": "^5.2.6",
    "@types/uuid": "^3.4.4",
    "@typescript-eslint/eslint-plugin": "^1.6.0",
    "@typescript-eslint/parser": "^1.6.0",
    "acorn": "^6.1.1",
    "chai": "^4.2.0",
    "esdoc": "^1.1.0",
    "esdoc-ecmascript-proposal-plugin": "^1.0.0",
    "esdoc-integrate-manual-plugin": "^1.0.0",
    "esdoc-standard-plugin": "^1.0.0",
    "esdoc-typescript-plugin": "^1.0.1",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-json": "^1.4.0",
    "eslint-plugin-prettier": "^3.0.1",
    "git-pre-push": "0.0.5",
    "mocha": "^6.0.2",
    "nyc": "^13.3.0",
    "prettier": "^1.16.4",
    "source-map-support": "^0.5.11",
    "ts-node": "^8.0.3",
    "typedoc": "^0.14.2",
    "typedoc-plugin-markdown": "^1.1.27",
    "typescript": "^3.4.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sebastianwessel/eventstore-ts-client.git"
  },
  "keywords": [
    "eventstore",
    "client",
    "typescript"
  ],
  "author": "Sebastian Wessel",
  "license": "Apache License 2",
  "bugs": {
    "url": "https://github.com/sebastianwessel/eventstore-ts-client/issues"
  },
  "homepage": "https://sebastianwessel.github.io/eventstore-ts-client/"
}
